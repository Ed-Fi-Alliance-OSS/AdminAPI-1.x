{
    "AppSettings": {
        "DatabaseEngine": "SqlServer",
        "ApiStartupType": "$API_MODE",
        "PathBase": "$ADMIN_API_VIRTUAL_NAME",
        "OdsApiVersion": "$ODS_API_VERSION"
    },
    "Authentication": {
        "Authority": "$AUTHORITY",
        "IssuerUrl": "$ISSUER_URL",
        "SigningKey": "$SIGNING_KEY",
        "AllowRegistration": true
    },
    "EnableSwagger": true,
    "EnableDockerEnvironment": true,
    "ConnectionStrings": {
        "Admin": "Data Source=$SQLSERVER_ADMIN_DATASOURCE;Initial Catalog=EdFi_Admin;User Id=$SQLSERVER_USER;Password=$SQLSERVER_PASSWORD; Integrated Security=False;Encrypt=false;TrustServerCertificate=true",
        "Security": "Data Source=$SQLSERVER_SECURITY_DATASOURCE;Initial Catalog=EdFi_Security;User Id=$SQLSERVER_USER;Password=$SQLSERVER_PASSWORD; Integrated Security=False;Encrypt=false;TrustServerCertificate=true"
    },
    "Log4NetCore": {
        "Log4NetConfigFileName": "./log4net.config"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information",
            "Microsoft.AspNetCore.DataProtection": "Information"
        }
    },
    "AllowedHosts": "*"
}
